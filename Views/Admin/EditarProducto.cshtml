@model SistemadeVentasOnline.Models.Producto
@{
    ViewBag.Title = "EditarProducto";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Productos</li>
        <li class="breadcrumb-item active">Editar Producto</li>
    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Editar Producto
        </div>
        <div class="card-body">
            @using (Html.BeginForm("EditarProducto", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.HiddenFor(d => d.ProductoId)

                <div class="form-group">
                    @Html.LabelFor(d => d.ProductoNombre, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(d => d.ProductoNombre, "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(d => d.ProductoNombre, "", new { @class = "text-danger" })
                    </div>
                </div>
                @{
                    List<SelectListItem> data = ViewBag.items;
                }
                <div class="form-group">
                    @Html.LabelFor(d => d.CategoriaId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(d => d.CategoriaId, data ?? new List<SelectListItem>(), "-Please select-")
                        @Html.ValidationMessageFor(d => d.CategoriaId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(d => d.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(d => d.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(d => d.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(d => d.ProductImage, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">

                        <input type="file" name="file" id="file" style="width: 100%;" />
                        @Html.ValidationMessageFor(d => d.ProductImage, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(d => d.Cantidad, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(d => d.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(d => d.Cantidad, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(d => d.Precio, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(d => d.Precio, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(d => d.Precio, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <p> </p>
            <input type="submit" class="btn btn-primary" value="Guardar" />
            <a href="~/Admin/Productos" class="btn btn-danger">Cancelar</a>
            }
        </div>
    </div>
</div>
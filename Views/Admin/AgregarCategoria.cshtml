@model SistemadeVentasOnline.Models.Categoria
@{
    ViewBag.Title = "AgregarCategoria";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Categorias</li>
        <li class="breadcrumb-item active">Agregar Nueva Categoria</li>
    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Agregar Nueva Categoria
        </div>
        <div class="card-body">
            @using (Html.BeginForm("AgregarCategoria", "Admin", FormMethod.Post))
            {
            <div class="form-group">
                <label class="control-label">Nombre de Categoria</label>
                @Html.TextBoxFor(d => d.CategoriaNombre, "", new { @class = "form-control"})
                @Html.ValidationMessageFor(d => d.CategoriaNombre, "", new { @class = "text-danger" })
            </div>
            <p> </p>
            <input type="submit" class="btn btn-primary" value="Guardar" />
            <a href="~/Admin/Categorias" class="btn btn-danger">Cancelar</a>
            }
        </div>
    </div>
</div>